<Window x:Class="Telegram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="650" Width="1200"
        MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow">
    <Window.Resources>
        <ContextMenu x:Key="ItemContextMenu" Style="{DynamicResource ContextMenuBorderBrush}">
            <MenuItem Width="180" Style="{DynamicResource MenuItemThreePoints}" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Style="{DynamicResource StackPanelWithHover}">
                        <Path Width="20" Height="13" Margin="8,0,0,0" Data="M10 33C10 25.7011 14.103 19.4168 20 16.5919C22.1347 15.5693 24.5046 15 27 15C36.3888 15 44 23.0589 44 33 M18 28L10 33L4 25" Style="{DynamicResource IconStyleMenu}"/>
                        <Label Content="Reply" FontSize="14" Style="{DynamicResource MainColorLable}" Margin="8,0,0,0"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Width="180" Style="{DynamicResource MenuItemThreePoints}" Cursor="Hand" Click="CopyTextMessageMenu_Click" Tag="{Binding Text}">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Style="{DynamicResource StackPanelWithHover}">
                        <Path Width="20" Height="20" Margin="8,0,0,0" Data="M13 12.4316V7.8125C13 6.2592 14.2592 5 15.8125 5H40.1875C41.7408 5 43 6.2592 43 7.8125V32.1875C43 33.7408 41.7408 35 40.1875 35H35.5163 M32.1875 13H7.8125C6.2592 13 5 14.2592 5 15.8125V40.1875C5 41.7408 6.2592 43 7.8125 43H32.1875C33.7408 43 35 41.7408 35 40.1875V15.8125C35 14.2592 33.7408 13 32.1875 13Z" Style="{DynamicResource IconStyleMenu}"/>
                        <Label Content="Copy text" FontSize="14" Style="{DynamicResource MainColorLable}" Margin="8,0,0,0"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Width="180" Style="{DynamicResource MenuItemThreePoints}" Cursor="Hand" Visibility="{Binding VisibilityDeleteMessage}" Click="DeleteMessageMenu_Click" Tag="{Binding Id}">
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Style="{DynamicResource StackPanelWithHover}">
                        <Path Margin="8,0,0,0" Data="M8 11L40 11 M18 5L30 5 M12 17H36V40C36 41.6569 34.6569 43 33 43H15C13.3431 43 12 41.6569 12 40V17Z" Style="{DynamicResource IconStyleFillRed}" Width="20" Height="20"/>
                        <Label Content="Delete" FontSize="14" Style="{DynamicResource LableStyleRed}" Margin="8,0,0,0"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#8366e2" Offset="0" />
                <GradientStop Color="#3a2386" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265"/>
            <ColumnDefinition />
            <ColumnDefinition x:Name="RigthInfoMenu" Width="0"/>
        </Grid.ColumnDefinitions>
        <!-- Left Chats -->
        <Grid Style="{DynamicResource MainColorGrid}" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!-- Button Menu -->
                <Button Width="30" Height="30" Click="OpenLeftMenu_Click" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                    <Path Margin="3,5,3,5" Data="M0.803711 0.0212402H25.8037C25.8037 1.48317 24.6186 2.6683 23.1567 2.6683H3.45077C1.98884 2.6683 0.803711 1.48317 0.803711 0.0212402Z M0.803711 6.19775H25.8037C25.8037 7.65968 24.6186 8.84481 23.1567 8.84481H3.45077C1.98884 8.84481 0.803711 7.65968 0.803711 6.19775Z M0.803711 12.3743H25.8037C25.8037 13.8362 24.6186 15.0213 23.1567 15.0213H3.45077C1.98884 15.0213 0.803711 13.8362 0.803711 12.3743Z" Style="{DynamicResource IconStyleDarkFill}">
                    </Path>
                </Button>
                <TextBox Style="{StaticResource SearchBox}" Grid.Column="1"
                    VerticalContentAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Normal"
                    Height="30"
                    Margin="8,0,10,0"/>
            </Grid>
            <!-- Chats List -->
            <ListView Style="{DynamicResource ContactsListListView}"
                      BorderThickness="0"
                      Grid.Row="1"
                      x:Name="Contact_ListView"
                      ScrollViewer.CanContentScroll="False"
                      SelectionChanged="ListView_SelectionChanged"
                      ItemContainerStyle="{DynamicResource ContactCard}">
                <ListView.ContextMenu>
                    <ContextMenu Style="{DynamicResource ContextMenuBorderBrush}" BorderThickness="0" BorderBrush="Transparent">
                        <MenuItem Width="180" Style="{StaticResource MenuItemThreePoints}" Cursor="Hand" Click="ReadAllMessage_Click">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Style="{DynamicResource StackPanelWithHover}">
                                    <Path Width="20" Height="20" Margin="5,0,0,0" Data="M19.3309 10.0001C19.3309 14.6025 15.5999 18.3334 10.9976 18.3334C8.5086 18.3334 2.66423 18.3334 2.66423 18.3334C2.66423 18.3334 2.66423 12.1135 2.66423 10.0001C2.66423 5.39771 6.39519 1.66675 10.9976 1.66675C15.5999 1.66675 19.3309 5.39771 19.3309 10.0001Z M6.83086 10.8334L9.3309 13.3334L14.7476 7.91675" Style="{DynamicResource IconStyleMenu}"/>
                                    <Label Content="Read all message" FontSize="14" Style="{DynamicResource MainColorLable}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem Width="180" Style="{StaticResource MenuItemThreePoints}" Cursor="Hand" Click="DeleteChat_Click">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Style="{DynamicResource StackPanelWithHover}">
                                    <Path Margin="8,0,0,0" Data="M10.3001 3.4165H2.80359V18.4165H10.3036 M14.0536 14.6665L17.8036 10.9165L14.0536 7.1665 M6.97025 10.9131H17.8036" Style="{DynamicResource IconStyleFillRed}" Width="20" Height="20"/>
                                    <Label Content="Delete chat" FontSize="14" Style="{DynamicResource LableStyleRed}" Margin="8,0,0,0"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>
        <!-- Chat -->
        <Grid x:Name="ChatGrid" Grid.Column="1" Grid.Row="1" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition />
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <!-- Chat User info -->
            <Border x:Name="BorderChatInfoWithButtons" Style="{DynamicResource MainColorBorder}" Cursor="Hand" PreviewMouseLeftButtonUp="OpenSelectedChatmenuInfo">
                <Grid HorizontalAlignment="Stretch" Margin="8">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <Ellipse x:Name="SelectedEllipse" Width="40" Height="40"/>
                            <TextBlock x:Name="SelectedEllipseText" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <Label x:Name="ChatPanel_Name"
                           Style="{DynamicResource MainColorLable}"
                           FontWeight="Bold"
                           Margin="5,0,0,0"/>
                            <Label x:Name="ChatPanel_SecondInfo"
                           Style="{DynamicResource SecondaryColorLable}"
                           FontSize="10"
                           FontWeight="Bold"
                           Margin="5,-5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!--<Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                            <Path Margin="5" Data="M16.9961 7.68583C17.7227 7.68583 18.3921 8.07985 18.7448 8.71509L21.1912 13.1219C21.5115 13.6989 21.5266 14.3968 21.2314 14.9871L18.8746 19.7008C18.8746 19.7008 19.5576 23.2122 22.416 26.0706C25.2744 28.929 28.7741 29.6002 28.7741 29.6002L33.487 27.2438C34.0777 26.9484 34.7761 26.9637 35.3533 27.2846L39.7726 29.7416C40.4072 30.0945 40.8008 30.7635 40.8008 31.4896L40.8008 36.5631C40.8008 39.1468 38.4009 41.0129 35.9528 40.1868C30.9249 38.4903 23.1202 35.2601 18.1734 30.3132C13.2265 25.3664 9.99631 17.5617 8.29977 12.5338C7.47375 10.0857 9.33984 7.68583 11.9235 7.68583L16.9961 7.68583Z" Style="{DynamicResource IconStyle}"/>
                        </Button>-->
                        
                        <Button Width="30" Height="30" Click="OpenRigthMenu_Click" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                            <Path Margin="5" Style="{DynamicResource IconStyle}">
                                <Path.Data>
                                    <GeometryGroup>
                                        <RectangleGeometry Rect="1.55359,0.77124,23.5,18.5" RadiusX="4.25" RadiusY="4.25" />
                                        <RectangleGeometry Rect="1.55359,0.77124,17.7308,18.5" RadiusX="4.25" RadiusY="4.25" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>
                        </Button>
                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                            <Path Margin="5" Data="M21 38C30.3888 38 38 30.3888 38 21C38 11.6112 30.3888 4 21 4C11.6112 4 4 11.6112 4 21C4 30.3888 11.6112 38 21 38Z M26.657 14.3431C25.2093 12.8954 23.2093 12 21.0001 12C18.791 12 16.791 12.8954 15.3433 14.3431 M33.2216 33.2217L41.7069 41.707" Style="{DynamicResource IconStyle}"/>
                        </Button>
                        <Menu Background="Transparent" Height="30" Width="30">
                            <MenuItem x:Name="ThreePointMenu" Style="{StaticResource MenuItemThreePoints}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Width="30">
                                <MenuItem.Header>
                                    <Button VerticalAlignment="Center" HorizontalAlignment="Center" Click="ThreePointMenuOpen_Click" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                                        <Path Margin="7.5,0,7.5,0" Data="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" Style="{DynamicResource IconStyleFill}"/>
                                    </Button>
                                </MenuItem.Header>
                                <MenuItem Width="180" Style="{StaticResource MenuItemThreePoints}" Margin="-5, 0, -5, 0" Cursor="Hand">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal" Style="{DynamicResource StackPanelWithHover}">
                                            <Path Width="25" Height="25" Margin="8,0,0,0" Data="M24,44C29.5228,44,34.5228,41.7614,38.1421,38.1421C41.7614,34.5228,44,29.5228,44,24C44,18.4772,41.7614,13.4772,38.1421,9.85786C34.5228,6.23858,29.5228,4,24,4C18.4772,4,13.4772,6.23858,9.85786,9.85786C6.23858,13.4772,4,18.4772,4,24C4,29.5228,6.23858,34.5228,9.85786,38.1421C13.4772,41.7614,18.4772,44,24,44Z M24,44C29.5228,44,34.5228,41.7614,38.1421,38.1421C41.7614,34.5228,44,29.5228,44,24C44,18.4772,41.7614,13.4772,38.1421,9.85786C34.5228,6.23858,29.5228,4,24,4C18.4772,4,13.4772,6.23858,9.85786,9.85786C6.23858,13.4772,4,18.4772,4,24C4,29.5228,6.23858,34.5228,9.85786,38.1421C13.4772,41.7614,18.4772,44,24,44Z M24,11C25.3807,11,26.5,12.1193,26.5,13.5C26.5,14.8807,25.3807,16,24,16C22.6193,16,21.5,14.8807,21.5,13.5C21.5,12.1193,22.6193,11,24,11Z M24.5,34V20H23.5H22.5 M21,34H28" Style="{DynamicResource IconStyle}"/>
                                            <Label Content="Info" FontSize="14" Style="{DynamicResource MainColorLable}" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem Width="180" Style="{StaticResource MenuItemThreePoints}" Margin="-5, 0, -5, 0" Cursor="Hand">
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal" Style="{DynamicResource StackPanelWithHover}">
                                            <Path Margin="8,0,0,0" Data="M8 11L40 11 M18 5L30 5 M12 17H36V40C36 41.6569 34.6569 43 33 43H15C13.3431 43 12 41.6569 12 40V17Z" Style="{DynamicResource IconStyleFillRed}" Width="22.5" Height="25"/>
                                            <Label Content="Delete chat" FontSize="14" Style="{DynamicResource LableStyleRed}" Margin="10.5,0,0,0"/>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Messages -->
            <ListView x:Name="Chat_ListView"
                Style="{DynamicResource ChatListListView}"
                BorderThickness="0"
                ScrollViewer.CanContentScroll="False"
                ScrollViewer.ScrollChanged="Chat_ListView_ScrollChanged"
                Grid.Row="1">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Tag" Value="{Binding Author.Id}"/>
                        <Setter Property="Margin" Value="0,10,0,0"/>
                        <Setter Property="ContextMenu" Value="{DynamicResource ItemContextMenu}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                        <Ellipse Width="40" Height="40" VerticalAlignment="Bottom">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Author.PhotoSource}" RenderOptions.BitmapScalingMode="Fant"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <Border CornerRadius="10 10 10 0" Style="{DynamicResource MessageColorBorder}" Margin="10,0,0,0" Height="Auto">
                                            <StackPanel Orientation="Vertical">
                                                <Label Content="{Binding Author.UserName}"
                                                    Style="{DynamicResource MainColorLable}"
                                                    FontWeight="SemiBold"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"/>
                                                <Image Source="{Binding PhotoSource}" Height="Auto" MaxHeight="200" />
                                                <StackPanel Orientation="Horizontal" Margin="0,-5,0,0">
                                                    <TextBlock Text="{Binding Text}"
                                                        TextWrapping="Wrap"
                                                        Style="{DynamicResource ColorTextMessageBlock}"
                                                        FontSize="14"
                                                        MaxWidth="450"
                                                        VerticalAlignment="Center" Grid.Column="0"/>
                                                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                                                        <Label Content="{Binding SendTime}"
                                                        Style="{DynamicResource SecondaryColorLable}"
                                                        FontSize="8"
                                                        FontWeight="SemiBold"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Right"/>
                                                        <Path Width="20" Height="11" Data="M1.42574 5.32582L5.47532 9.78713C5.57314 9.8949 5.78155 9.89637 5.86047 9.78985L12.195 1.23938 M6.34664 5.32582L10.3962 9.78713C10.494 9.8949 10.7025 9.89637 10.7814 9.78985L17.1159 1.23938" Style="{DynamicResource IconStyle}" Visibility="{Binding VisibilityViewed}" VerticalAlignment="Bottom" Margin="3"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            <!-- To Down Button -->
            <Button x:Name="Button_To_Down" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Width="35" Height="35" Margin="0,0,15,10" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconBorderedStyle}" Click="Button_To_Down_Messages" Visibility="Hidden">
                <Path Data="M282.082,76.511l-14.274-14.273c-1.902-1.906-4.093-2.856-6.57-2.856c-2.471,0-4.661,0.95-6.563,2.856L142.466,174.441
		L30.262,62.241c-1.903-1.906-4.093-2.856-6.567-2.856c-2.475,0-4.665,0.95-6.567,2.856L2.856,76.515C0.95,78.417,0,80.607,0,83.082
		c0,2.473,0.953,4.663,2.856,6.565l133.043,133.046c1.902,1.903,4.093,2.854,6.567,2.854s4.661-0.951,6.562-2.854L282.082,89.647
		c1.902-1.903,2.847-4.093,2.847-6.565C284.929,80.607,283.984,78.417,282.082,76.511z" Style="{DynamicResource IconStyleFill}" Margin="5,10,5,10" Stretch="Fill"/>
            </Button>
            <!-- MessageBox -->
            <Grid Grid.Row="2" Style="{DynamicResource MainColorGrid}" x:Name="WriteMessageBox">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Border Style="{DynamicResource TextBoxWithPlaceHolderBorder}" CornerRadius="8,0,0,8" Grid.Column="0" Margin="0,10,-10,10">
                    <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}" Click="AddFile_Click">
                        <Path Margin="5" Data="M24.7073,9.56521 L9.85801,24.4145 C6.34329,27.9292 6.34329,33.6277 9.85801,37.1424 V37.1424 C13.3727,40.6571 19.0712,40.6571 22.5859,37.1424 L40.2636,19.4647 C42.6067,17.1216 42.6067,13.3226 40.2636,10.9794 V10.9794 C37.9205,8.63628 34.1215,8.63628 31.7783,10.9794 L14.1007,28.6571 C12.9291,29.8287 12.9291,31.7282 14.1007,32.8997 V32.8997 C15.2722,34.0713 17.1717,34.0713 18.3433,32.8997 L33.1925,18.0505" Style="{DynamicResource IconStyle}"/>
                    </Button>
                </Border>
                <TextBox Grid.Column="1"
                         Height="50"
                         FontSize="14"
                         MaxLength="500"
                         Style="{StaticResource MessageBox}"
                         PreviewKeyDown="MessageBox_PreviewKeyDown"
                         Grid.ColumnSpan="1"
                         Margin="0,0,10,0"/>
                <Border Style="{DynamicResource TextBoxWithPlaceHolderBorder}" CornerRadius="0,8,8,0" Grid.Column="2" Margin="-10,10,10,10">
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,16,0">
