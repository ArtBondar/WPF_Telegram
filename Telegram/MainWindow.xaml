                        <Button Content="Edit" Width="75" Height="30" Margin="0,0,15,0" Style="{DynamicResource Menu_Buttons}" Click="Edit_EditPassword_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
