                        </Button>
                        <Button Width="25" Height="25" Margin="10,0,5,0" Background="Transparent" BorderBrush="Transparent" Style="{DynamicResource ButtonIconStyle}">
                            <Path Data="M18.5119 6.68783C18.5119 4.15652 16.4599 2.10449 13.9285 2.10449C11.3972 2.10449 9.34521 4.15652 9.34521 6.68783V12.417C9.34521 14.9483 11.3972 17.0003 13.9285 17.0003C16.4599 17.0003 18.5119 14.9483 18.5119 12.417V6.68783Z M20.8036 18.4807C19.9443 19.4572 18.8865 20.239 17.7009 20.7741C16.5154 21.3092 15.2293 21.5852 13.9286 21.5836M13.9286 21.5836C12.6279 21.5852 11.3418 21.3092 10.1562 20.7741C8.97067 20.239 7.91291 19.4572 7.05359 18.4807M13.9286 21.5836V25.0211M11.6369 25.0211H16.2203" Style="{DynamicResource IconStyle}" Stretch="Fill"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
