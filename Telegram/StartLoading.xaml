<Window x:Class="Telegram.StartLoading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Loaded="Window_Loaded"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Background="#0C0221"
        Title="StartLoading" Height="350" Width="250">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image gif:ImageBehavior.AnimatedSource="/Image/loading.gif" Width="200" Height="200" />
            <TextBlock Text="Loading..." FontSize="24" Foreground="#C6BDFF" FontFamily="pack://application:,,,/Themes/#Montserrat" HorizontalAlignment="Center" Margin="25"/>
        </StackPanel>
    </Grid>
</Window>
