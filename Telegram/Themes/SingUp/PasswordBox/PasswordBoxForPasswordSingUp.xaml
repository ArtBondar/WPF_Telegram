<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PasswordBoxForPasswordSingUp" TargetType="PasswordBox">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CaretBrush" Value="#C6BDFF" />
        <Setter Property="Foreground" Value="#C6BDFF" />
        <Setter Property="FontWeight" Value="Thin" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="PasswordChar" Value="*" />
        <Setter Property="FontFamily" Value="pack://application:,,,/Themes/#Montserrat" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
</ResourceDictionary>